<?xml version="1.0" encoding="utf-8"?>
<com.bedrock.drawerdemo.StackDrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/back_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:gravity="top|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="back view "
            android:textColor="@color/color_black"
            android:textSize="30sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_gravity="bottom"
        android:background="@color/color_yellow"
        android:id="@+id/drawer_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/view_a"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_a_1"
                android:gravity="center"
                android:text="view_a_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/tv_a_2"
                android:gravity="center"
                android:text="view_a_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/tv_a_3"
                android:gravity="center"
                android:text="view_a_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>
        <LinearLayout
            android:background="@color/color_green_light"
            android:layout_marginTop="100dp"
            android:id="@+id/view_b"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_b_1"
                android:text="tv_b_1"
                android:textColor="@color/color_red"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:id="@+id/tv_b_2"
                android:text="tv_b_2"
                android:textColor="@color/color_red"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

        </LinearLayout>

    </RelativeLayout>

</com.bedrock.drawerdemo.StackDrawerLayout>